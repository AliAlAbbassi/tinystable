{
  "name": "tinystable",
  "version": "1.0.0",
  "description": "A minimal implementation of stablecoin savings with DeFi yields",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --parallel -r build",
    "test": "pnpm --parallel -r test",
    "clean": "pnpm --parallel -r clean",
    "contracts:compile": "pnpm --filter contracts compile",
    "contracts:deploy": "pnpm --filter contracts deploy",
    "contracts:test": "pnpm --filter contracts test",
    "backend:test": "pnpm --filter backend test",
    "mobile:test": "pnpm --filter mobile test",
    "backend:dev": "pnpm --filter backend dev",
    "backend:start": "pnpm --filter backend start",
    "mobile:start": "pnpm --filter mobile start",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:android": "pnpm --filter mobile android"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}